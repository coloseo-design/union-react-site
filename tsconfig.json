{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es6",
    "lib": ["dom", "es2021"],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "../src",
    "type.d.ts",
  ],
  "exclude": [
    "../node_modules", "lib", "es", "**/__tests__/**"
  ]
}
